@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>登陆</title>
    <link rel="stylesheet" href="~/Content/enter/enter.css" />
</head>
<body>
    <div class="lay_left">
        <img src="/Content/enter/imgs/logo.png" alt="" class="mod_logo">
        <h1>爱客思源客户管理系统</h1>
        <h2>The Ministry of Human Resources and Social Security Education Enterprise</h2>
        <ul class="mod_funct">
            <li><i></i><span>考勤数据导入导出</span></li>
            <li><i></i><span>考勤数据统计分析</span></li>
        </ul>
        @*<p class="mod_number">
                10,000,0条
            </p>*@
        @*<h5 class="mod_data">
                累计收到上报数据
            </h5>*@
    </div>
    <div class="lay_right">
        <div class="mod_inner">
            <h2>爱客思源客户管理系统</h2>
            <form class="mod_form" method="POST" action="@Url.Action("Login", "Account")">
                <div class="admin">
                    <i></i>
                    <input type="text" placeholder="请输入账号" id="account" name="account" required="" value="@ViewBag.account">
                </div>
                <div class="pass">
                    <i></i>
                    <input placeholder="请输入密码" type="password" id="password" name="password" required="" value="@ViewBag.password">
                </div>
                <div class="safe">
                    <i></i>
                    <input type="text" placeholder="请输入验证码" id="verCode" name="VerCode" class="form-control" required="">
                    <img onclick="NextCode();" id="VerificationCode" style="cursor: pointer" src="@Url.Action("GetImgVerificationCode", "Account")" />
                </div>
                <h3 style="color:#e8001b;font-size:12px;font-weight:400;text-align:left;margin-bottom:5px">@ViewBag.msg</h3>
                <div class="mod_btn" style="border-bottom:none">
                    <button type="submit">登陆</button>
                </div>
            </form>


        </div>
    </div>

</body>
</html>
<script type="text/javascript" charset="utf-8">if (window.top !== window.self) { window.top.location = window.location; }</script>

<script src="/Content/js/jquery.min.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<script>
    // 刷新验证码
    function NextCode() {
        $("#VerificationCode").attr("src", "@Url.Action("GetImgVerificationCode", "Account")?d=" + (new Date().valueOf()));

    }
    $(document).ready(function () {
        NextCode();
        var timeout = setTimeout(function () {  //使用  setTimeout（）方法设定定时2000毫秒
            window.location.reload();//页面刷新
        }, 200);
        clearTimeout(timeout);
    });



</script>
