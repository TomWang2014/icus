@using System.Diagnostics
@using ICusCRM.Infrastructure.Entity
@model ICusCRM.Application.OrgMgtServices.Dtos.ProjectDto
@{
    var projectType = ViewBag.projectType as List<ComboboxItemDto>;
}

<form class="form-horizontal" action="@Url.Action("AddProject")" enctype="multipart/form-data" method="POST" id="signupForm">
    <div class="row">
        <div class="tabs-container">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a data-toggle="tab" href="#tab-1" aria-expanded="false"> 项目基本信息</a>
                </li>
                <li class="">
                    <a data-toggle="tab" href="#tab-2" aria-expanded="true">项目简介</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane  active">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目编号：</label>
                            <div class="col-sm-8">
                                <input id="firstname" name="ProjectCode" disabled="" value="@Model.ProjectCode" class="form-control" type="text">
                                <span class="help-block m-b-none"><i class="fa fa-info-circle"></i> 项目编号系统自动生成，确定后不可更改。</span>
                                <input type="hidden" name="Id" value="@Model.Id" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目名称：</label>
                            <div class="col-sm-8">
                                <input id="lastname" name="Name" value="@Model.Name" class="form-control" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">封面图片：</label>
                            <div class="col-sm-8">
                                <input id="FrontImage" name="FrontImage" class="form-control" value="@Model.FrontImage" type="file">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目章节：</label>
                            <div class="col-sm-8">
                                <input id="LearnTime" name="LearnTime" class="form-control" value="@Model.LearnTime" type="number">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">讲师：</label>
                            <div class="col-sm-8">
                                <input id="Teacher" name="Teacher" class="form-control" value="@Model.Teacher" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目分类：</label>
                            <div class="col-sm-8">
                                <select class="form-control" id="ProjectType" name="ProjectType">
                                    <option value="">请选择分类</option>
                                    @foreach (var item in projectType)
                                    {
                                        <option value="@item.Value">@item.DisplayText</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">适用人群：</label>
                            <div class="col-sm-8">
                                <input id="lastname" name="TrialRange" class="form-control" value="@Model.TrialRange" type="text">
                            </div>
                        </div>


                        <div class="form-group date" id="datetimePicker">
                            <label class="col-sm-3 control-label">开始时间：</label>
                            <div class="col-sm-8">
                                <input id="StartTime" name="StartTime" class="form-control" type="text" value="@Model.StartTimeStr">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">结束时间：</label>
                            <div class="col-sm-8">
                                <input id="EndTime" name="EndTime" class="form-control" type="text" value="@Model.EndTimeStr">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">价格：</label>
                            <div class="col-sm-8">
                                <input id="Price" name="Price" class="form-control" value="@Model.Price" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">地址：</label>
                            <div class="col-sm-8">
                                <input id="Url" name="Url" class="form-control" value="@Model.Url" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tab-2" class="tab-pane">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目摘要：</label>
                            <div class="col-sm-8">
                                <textarea id="Shortabstract" name="Shortabstract" class="form-control" rows="3">@Html.Raw(Model.Shortabstract)</textarea>
                                <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>摘要最大允许200字符。</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">项目描述：</label>
                            <div class="col-sm-8">
                                <textarea style="height: 400px" name="Descriptions" id="Descriptions">@Html.Raw(Model.Descriptions)</textarea>
                                <span class="help-block m-b-none"><i class="fa fa-info-circle"></i>内容最大允许2000字符。</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="form-group" style="margin-top: 25px">
        <div class="col-sm-12" style="text-align:center;">
            <button type="button" onclick="save();" class="btn btn-primary">保存</button>
            <button type="button" onclick="javascript: window.location = '/Org/ProjectMgtResul'" class="btn btn-default">返回列表</button>
        </div>
    </div>
</form>
@section css{
    <link href="~/Content/js/plugins/wangEditor/css/wangEditor.min.css" rel="stylesheet" />
    <link href="~/Content/js/plugins/datetimepicker/bootstrap-datetimepicker.css" rel="stylesheet" />
}

@section js{
    <script src="~/Content/js/plugins/wangEditor/js/wangEditor.min.js"></script>
    <script src="~/Content/js/plugins/datetimepicker/bootstrap-datetimepicker.js"></script>
    <script src="~/Content/js/plugins/datetimepicker/bootstrap-datetimepicker.zh-CN.js"></script>
    <script type="text/javascript">
        vm = new Vue({
            el: 'body'
        });
        $("#ProjectType").val("@Model.ProjectType");
        $(document).ready(function () {
            // 表单验证
            $('#signupForm').bootstrapValidator({
                fields: {
                    Name: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            },
                            stringLength: {
                                min: 2,
                                max: 50,
                                message: '长度必须在2到50之间'
                            }
                        }
                    },
                    LearnTime: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    ProjectType: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    TrialRange: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    StartTime: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    EndTime: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    Price: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    IsautomaticUserStr: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    },
                    Url: {
                        validators: {
                            notEmpty: {
                                message: '该字段不能为空！'
                            }
                        }
                    }
                }
            });

            // 编辑的时候初始化option选项
            if ("@Model.Id" > 0) {
                if ("@Model.IsautomaticUser" == "False") {
                    $("#IsautomaticUserStr").val("0");
                } else {
                    $("#IsautomaticUserStr").val("1");
                }

                if ("@Model.IsRecommend" == "False") {
                    $("#IsRecommendStr").val("0");
                } else {
                    $("#IsRecommendStr").val("1");
                }
            } else {
                $("#Price, #LearnTime").val("");
                $('#StartTime, #EndTime').val("");
            }
        });
        if ("@ViewBag.msg" === "ok") {
            ICusCRM.Msg.showSuccess("操作成功，即将调回列表页面");
            window.setTimeout(back, 1000);
        }

        function back() {
            window.location.href = "/Org/ProjectMgtResul";
        }

        try {
            var editor = new wangEditor('Descriptions');
            editor.config.mapAk = 'TVhjYjq1ICT2qqL5LdS8mwas';
            wangEditor.config.printLog = false; // 阻止输出log
            // editor.config.pasteText = true; //只粘贴纯文本
            editor.config.uploadImgUrl = '/News/upload';
            editor.config.uploadHeaders = {
                'Accept': 'text/x-json'
            }; //设置 headers
            editor.onchange = function () {
                // vm.content = editor.$txt.html();
            };


            // 仅仅想移除某几个菜单，例如想移除『插入代码』和『全屏』菜单：
            // 其中的 wangEditor.config.menus 可获取默认情况下的菜单配置
            editor.config.menus = $.map(wangEditor.config.menus, function (item, key) {
                if (item === 'fontsize') {
                    return null;
                }
                if (item === 'fontfamily') {
                    return null;
                }
                if (item === 'bold') {
                    return null;
                } if (item === 'underline') {
                    return null;
                }
                return item;
            });


            editor.create();
        } catch (e) {
            console.log(e);
        }

        $('#StartTime,#EndTime').datetimepicker({
            language: 'zh-CN',
            format: "yyyy-mm-dd",
            autoclose: 1,
            minView: 2,
        }).on('changeDate', function (ev) {
            $('#signupForm').data('bootstrapValidator').updateStatus('StartTime', 'NOT_VALIDATED', null).validateField('StartTime');
            $('#signupForm').data('bootstrapValidator').updateStatus('EndTime', 'NOT_VALIDATED', null).validateField('StartTime');
        });

        // 保存信息
        function save() {

            var from = ICusCRM.Validator.isValid("#signupForm");
            if (!from) {
                return false;
            }


            // 新增时候验证附件
            if ("@Model.Id" == "0") {
                var fileText = $("#FrontImage").val();
                if (fileText == "") {
                    ICusCRM.Msg.showError("请选择封面图片", "提示信息");
                    return false;
                }
            }


            if ($("#Shortabstract").val().length < 10) {
                ICusCRM.Msg.showError("项目摘要信息必须大于10个字符", "提示信息");
                return false;
            }

            if ($("#Descriptions").val().length < 10) {
                ICusCRM.Msg.showError("项目描述信息必须大于10个字符", "提示信息");
                return false;
            }

            document.getElementById("signupForm").submit();
        }
    </script>
}


