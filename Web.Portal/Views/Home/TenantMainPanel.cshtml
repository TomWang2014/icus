<div class="row">

    <div class="col-sm-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5 class="m-b-md">项目数量</h5>
                <h2 class="text-navy">
                    <i class="fa fa-codepen"></i> 10个
                </h2>
                <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
            </div>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5 class="m-b-md">学员数量</h5>
                <h2 class="text-navy">
                    <i class="fa fa-users"></i> 1000人
                </h2>
                <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
            </div>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5 class="m-b-md">当年上报数据</h5>
                <h2 class="text-navy">
                    <i class="fa fa-database"></i> 1000条
                </h2>
                <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
            </div>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5 class="m-b-md">累计上报数据</h5>
                <h2 class="text-navy">
                    <i class="fa fa-database"></i> 90000条
                </h2>
                <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div>
                    <h3 class="font-bold no-margins">
                        2015年-2016年报名人数趋势对比图
                    </h3>
                </div>
                <div class="m-t-md">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="echarts" id="echarts-line-chart"></div>
                        </div>
                    </div>
                </div>
                <div class="m-t-md">
                    <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div>
                    <h3 class="font-bold no-margins">
                        2016年报名人数与2015年同期对比图
                    </h3>
                </div>
                <div class="m-t-md">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="echarts" id="echarts-bar-chart"></div>
                        </div>
                    </div>
                </div>
                <div class="m-t-md">
                    <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div>
                    <h3 class="font-bold no-margins">
                        11月上报数据条数统计图
                    </h3>
                </div>
                <div class="m-t-md">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="echarts" id="echarts-data-chart"></div>
                        </div>
                    </div>
                </div>
                <div class="m-t-md">
                    <small>截至更新时间：@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                </div>
            </div>
        </div>
    </div>
</div>



@section js{
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- 自定义js -->
    <script src="~/Content/js/content.js?v=1.0.0"></script>
    <script src="~/Content/js/plugins/echarts/echarts-all.js"></script>
    <script>
        vm = new Vue({
            el: 'body'
        });
        $(document).ready(function () {
            loaddata();
        });

        function loaddata() {

            var lineChart = echarts.init(document.getElementById("echarts-line-chart"));
            var lineoption = {
                title: {
                    show: false,
                    text: '2016年报名人数趋势同期对比图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: ['2015年', '2016年']
                },
                grid: {
                    x: 40,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [
                    {
                        name: '2015年',
                        type: 'line',
                        data: [1000, 5000, 3000, 4500, 4500, 5500, 2500, 3580, 2580, 1650, 2530, 4328],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    },
                    {
                        name: '2016年',
                        type: 'line',
                        data: [3500, 2000, 3500, 7800, 9000, 5000, 4500, 8000, 4500, 4000, 3500, 7500],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    }
                ]
            };
            lineChart.setOption(lineoption);
            $(window).resize(lineChart.resize);


            var barChart = echarts.init(document.getElementById("echarts-bar-chart"));
            var baroption = {
                title: {
                    show: false,
                    text: '2016年报名人数与2015年同期对比图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: ['2015年', '2016年']
                },
                grid: {
                    x: 30,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [
                    {
                        name: '2015年',
                        type: 'bar',
                        data: [1000, 5000, 3000, 4500, 4500, 5500, 2500, 3580, 2580, 1650, 2530, 4328],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    },
                    {
                        name: '2016年',
                        type: 'bar',
                        data: [3500, 2000, 3500, 7800, 9000, 5000, 4500, 8000, 4500, 4000, 3500, 7500],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    }
                ]
            };
            barChart.setOption(baroption);
            window.onresize = barChart.resize;
            binduserdata();
        }

        function binduserdata() {
            var barChart = echarts.init(document.getElementById("echarts-data-chart"));
            var baroption = {
                title: {
                    show: false,
                    text: '11月上报数据条数统计图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    show: false,
                    data: ['日期']
                },
                grid: {
                    x: 30,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['11月1日', '11月2日', '11月3日', '11月4日', '11月5日', '11月6日', '11月7日', '11月8日', '11月9日', '11月10日', '11月11日', '11月12日', '11月13日', '11月14日', '11月15日', '11月16日', '12月17日', '11月18日', '11月19日', '11月20日', '11月21日', '11月22日', '11月23日', '11月24日', '11月25日', '11月26日', '11月27日', '11月28日', '11月29日', '11月30日']
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [
                    {
                        name: '报名总人数',
                        type: 'bar',
                        data: [1000, 5000, 3000, 4500, 4500, 5500, 2500, 3580, 2580, 1650, 2530, 4328, 5000, 4200, 6000,3456,3211,3211,3231,5562,5435,3242,6532,5434,6546,2334,5436,1234,5456,3622],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    }
                ]
            };
            barChart.setOption(baroption);
            window.onresize = barChart.resize;
        }

    </script>
}
