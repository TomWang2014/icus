@section js{
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- 自定义js -->
    <script src="~/Content/js/content.js?v=1.0.0"></script>
    <script src="~/Content/js/plugins/echarts/echarts-all.js"></script>
    <script>
        vm = new Vue({
            el: 'body'
        });

        $(document).ready(function () {
            loaddata();
        });

        function loaddata() {

            var lineChart = echarts.init(document.getElementById("echarts-line-chart"));
            var lineoption = {
                title: {
                    show: false,
                    text: '2016年报名人数趋势同期对比图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: ['2015年', '2016年']
                },
                grid: {
                    x: 40,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [
                    {
                        name: '2015年',
                        type: 'line',
                        data: [1000, 5000, 3000, 4500, 4500, 5500, 2500, 3580, 2580, 1650, 2530, 4328],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    },
                    {
                        name: '2016年',
                        type: 'line',
                        data: [3500, 2000, 3500, 7800, 9000, 5000, 4500, 8000, 4500, 4000, 3500, 7500],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    }
                ]
            };
            lineChart.setOption(lineoption);
            $(window).resize(lineChart.resize);


            var barChart = echarts.init(document.getElementById("echarts-bar-chart"));
            var baroption = {
                title: {
                    show: false,
                    text: '2016年报名人数与2015年同期对比图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: ['2015年', '2016年']
                },
                grid: {
                    x: 30,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月']
                    }
                ],
                yAxis: [
                    {
                        type: 'value'
                    }
                ],
                series: [
                    {
                        name: '2015年',
                        type: 'bar',
                        data: [1000, 5000, 3000, 4500, 4500, 5500, 2500, 3580, 2580, 1650, 2530, 4328],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    },
                    {
                        name: '2016年',
                        type: 'bar',
                        data: [3500, 2000, 3500, 7800, 9000, 5000, 4500, 8000, 4500, 4000, 3500, 7500],
                        markPoint: {
                            data: [
                                { type: 'max', name: '最大值' },
                                { type: 'min', name: '最小值' }
                            ]
                        }
                    }
                ]
            };
            barChart.setOption(baroption);
            window.onresize = barChart.resize;
            binduserdata();
        }

        function binduserdata() {
            var barChart = echarts.init(document.getElementById("echarts-user-chart"));
            var baroption = {
                title: {
                    show: false,
                    text: '各个项目学员报名总人数统计图'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    show: false,
                    data: ['项目名称']
                },
                grid: {
                    x: 30,
                    x2: 40,
                    y2: 24
                },
                calculable: true,
                xAxis: [
                    {
                        type: 'category',
                        data: ['x1培训项目', 'x2培训项目', 'x3培训项目', 'x4培训项目', 'x5培训项目', 'x6培训项目', 'x7培训项目', 'x8培训项目', 'x9培训项目', 'x10培训项目', 'x11培训项目', 'x12培训项目', 'x13培训项目', 'x14培训项目', 'x15培训项目']
