@model College.Web.Portal.Models.Main.IndexDataResp
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="content">
    <!--顶部区域-->


    <div class="top">
        <div class="focusimg">
            <div id="fsD1" class="focus">
                <div id="D1pic1" class="fPic">
                    @if (Model.ProjectHotList.Count > 0)
                    {
                        foreach (var item in Model.ProjectHotList)
                        {
                            <div style="display: block;" class="fcon">
                                <a target="_blank" href="@item.NetProjectCarbonUrl" class="banner-pic"><img src="@ViewBag.ImgDomain@item.FrontImage@ViewBag.ImgYs" width="700" height="320" style="opacity: 0.78;"></a><span class="shadow">
                                    <a target="_blank" href="@item.NetProjectCarbonUrl">
                                        @if (item.NetProjectCarbonName.Length > 22)
                                        {
                                            <h2>@item.NetProjectCarbonName.Substring(0, 22)...</h2>
                                        }
                                        else
                                        {
                                            <h2>@item.NetProjectCarbonName</h2>
                                        }
                                        @if (item.NetProjectCarbonShortabstract.Length > 148)
                                        {
                                            <p>@item.NetProjectCarbonShortabstract.Substring(0, 148)...</p>
                                        }
                                        else
                                        {
                                            <p>@item.NetProjectCarbonShortabstract</p>
                                        }

                                    </a>
                                </span>
                            </div>
                        }
                    }
                </div>
                <div class="fbg">
                    <div id="D1fBt" class="D1fBt">
                        @if (Model.ProjectHotList.Count > 6)
                        {
                            <a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a><a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a><a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a><a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a><a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a><a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a>
                        }
                        else
                        {
                            foreach (var item in Model.ProjectHotList)
                            {
                                <a href="javascript:void(0)" hidefocus="true" target="_self"><i>125250</i></a>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--培训动态-->
    <div class="two">
        <div class="net left">
            <h2>
                <span> </span>网络培训动态
                <button type="button" class="btn" onclick='ToNewsList()'>MORE+</button>
            </h2>
            <ul>
                @if (Model.WLPXDTNewList.Count > 0)
                {
                    foreach (var item in Model.WLPXDTNewList)
                    {
                        if (item.newsTypeName == "培训动态")
                        {
                            <li> <b class="dontai">@item.newsTypeName</b><a href="@Url.Action("NewsInfo", "Main", new { newid = item.Id })">@item.Title</a><span>@item.CreateTime</span></li>
                        }
                        else if (item.newsTypeName == "培训政策")
                        {
                            <li> <b class="zhengce">@item.newsTypeName</b><a href="@Url.Action("NewsInfo", "Main", new { newid = item.Id })">@item.Title</a><span>@item.CreateTime</span></li>
                        }

                    }
                }

            </ul>

        </div>
    </div>
    <!--干部培训和推荐课程-->
    <div class="three">
        <div class="left">
            <h2>
                <span> </span>系统培训课程
                <button type="button" class="btn" onclick="ToProjectList(1)">MORE+ </button>
            </h2>
            <ul>
                @if (Model.OfficialProjects.Count > 0)
                {
                    foreach (var item in Model.OfficialProjects)
                    {
                        <li onclick='javascript:window.location.href = "@item.Url"'><img src="@ViewBag.ImgDomain@item.FrontImage@ViewBag.ImgFm"><h3>@item.Name</h3></li>
                    }
                }


            </ul>
        </div>
    </div>


    <!--技能培训和推荐课程-->
    <div class="five">
        <div class="left">
            <h2>
                <span> </span>技能培训课程
                <button type="button" class="btn" onclick="ToProjectList(2)">MORE+ </button>
            </h2>
            <ul>
                @if (Model.TechnologyProjects.Count > 0)
                {
                    foreach (var item in Model.TechnologyProjects)
                    {
                        <li onclick='javascript:window.location.href = "@item.Url"'>
                            <img src="@ViewBag.ImgDomain@item.FrontImage@ViewBag.ImgFm">
                            <h3>@item.Name</h3>
                        </li>
                    }
                }


            </ul>
        </div>
    </div>

