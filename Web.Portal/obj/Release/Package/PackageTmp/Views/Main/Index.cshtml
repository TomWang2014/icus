    <script language="javascript">
        function _nl_ys_check() {
            var keyword = document.getElementById('showkeycode125141').value;
            if (keyword == null || keyword == "") {
                alert("请输入你要检索的内容！");
                return false;
            }
            if (window.toFF == 1) {
                document.getElementById("lucenenewssearchkeyword125141").value = Simplized(keyword);
            } else {
                document.getElementById("lucenenewssearchkeyword125141").value = keyword;
            }
            var base64 = new Base64();
            document.getElementById("lucenenewssearchkeyword125141").value = base64
                .encode(document.getElementById("lucenenewssearchkeyword125141").value);
            new VsbFormFunc().disableAutoEnable(document.getElementById("showkeycode125141"));
            return true;
        }
    </script>

