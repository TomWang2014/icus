<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>教培中心 - 登录</title>
    <meta name="keywords" content="">
    <meta name="description" content="">

    <link rel="shortcut icon" href="/favicon.ico">
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/font-awesome.css" rel="stylesheet">
    <link href="/Content/css/animate.css" rel="stylesheet">
    <link href="/Content/css/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="/Content/css/plugins/bootstrapValidator.css" rel="stylesheet" />
    <link href="/Content/css/index.css" rel="stylesheet" />
    <link href="~/Content/css/log.css" rel="stylesheet" />
</head>

<body class="gray-bg">
    <img src="/Content/img/logo-bc.png" alt="" class="bcimg">
    <img src="/Content/img/logo.png" alt="" class="logoimg">
    <div class="middle-box text-center loginscreen  ">
        <div>

            <h3>@ViewBag.msg</h3>
            <form class="m-t" role="form" method="POST" action="@Url.Action("Login", "Account")">
                <div class="form-group">
                    <input type="text" class="form-control" id="account" name="account" placeholder="用户名" required=""><i class="fa fa-user"></i>
                </div>
                <div class="form-group">
                    <input type="password" id="password" class="form-control" name="password" placeholder="请输入密码" required=""><i class="fa fa-lock"></i>
                </div>
                <div class="form-group">
                    <input type="text" id="verCode" name="VerCode" class="form-control" placeholder="请输入验证码" required="">
                    @*<img src="/Content/img/vercode.png" alt="">*@
                    <img onclick="NextCode();" id="VerificationCode" style="cursor: pointer" src="@Url.Action("GetImgVerificationCode", "Account")" />
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            </form>
        </div>
    </div>
    <p>
        Copyright 2017. All right reserved e.ethrss.cn <br>
        技术支持：北京中教在线科技有限公司
    </p>
    <!-- 全局js -->
    <!--统计代码，可删除-->


    <script type="text/javascript" charset="utf-8">if (window.top !== window.self) { window.top.location = window.location; }</script>

    <script src="/Content/js/jquery.min.js"></script>
    <script src="/Content/js/bootstrap.min.js?v=3.3.6"></script>

</body>

</html>
<script>
    // 刷新验证码
    function NextCode() {
        $("#VerificationCode").attr("src", "@Url.Action("GetImgVerificationCode", "Account")?d=" + (new Date().valueOf()));

    }
    $(document).ready(function () {
        NextCode();
    });
</script>